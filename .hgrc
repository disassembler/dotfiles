[ui]
username = Samuel Leathers <sbl5007@psu.edu>
editor = "/usr/bin/vim" --noplugin
commitsubrepos = no
ignore = ~/.cvsignore

[pager]
pager = LESS='FSRX' less
attend = annotate, cat, diff, export, glog, log, qdiff

[extensions]
purge=
prompt=~/lib/hg/hg-prompt/prompt.py
shelve=~/lib/hg/hgshelve/hgshelve.py
pager=
color=
mercurial_keyring=~/lib/hg/mercurial_keyring/mercurial_keyring.py
hgext.bookmarks=
hggit=
graphlog=
schemes=
crecord=~/lib/hg/crecord/crecord

[merge-tools]
splice.executable = gvim
splice.args = -f $base $local $other $output -c 'SpliceInit'
splice.premerge = keep
splice.priority = 1

[schemes]
bb = https://bitbucket.org/
cos = ssh://hg@bit.science.psu.edu/
mbb = ssh://hg@bitbucket.org/sbl5007/

[git]
intree=1
